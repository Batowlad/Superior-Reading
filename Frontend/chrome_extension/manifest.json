{
  "manifest_version": 3,
  "name": "Superior Reading - Content Scraper",
  "version": "1.0",
  "description": "Automatically scrapes main content from web pages and sends to local server",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Superior Reading Scraper",
    "default_icon": {
      "16": "icons/book_icon.png",
      "32": "icons/book_icon.png",
      "48": "icons/book_icon.png",
      "128": "icons/book_icon.png"
    }
  },
  "icons": {
    "16": "icons/book_icon.png",
    "32": "icons/book_icon.png",
    "48": "icons/book_icon.png",
    "128": "icons/book_icon.png"
  }
}
